<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.XMBT.bluetooth.le.ui.pbattery.BatteryActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <View style="@style/separation_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/radio1"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/radio1"
                style="@style/main_tab"
                android:drawableTop="@drawable/index_radio_selector"
                android:text="我的设备"/>

            <RadioButton
                android:id="@+id/radio2"
                style="@style/main_tab"
                android:text="配件查询"
                android:drawableTop="@drawable/parts_radio_selector"/>

            <RadioButton
                android:id="@+id/radio3"
                style="@style/main_tab"
                android:text="最新资讯"
                android:drawableTop="@drawable/advice_radio_selector"/>

            <RadioButton
                android:id="@+id/radio4"
                style="@style/main_tab"
                android:text="个人中心"
                android:drawableTop="@drawable/main_me"/>

        </RadioGroup>

    </LinearLayout>


</LinearLayout>
