<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.XMBT.bluetooth.le.ui.start.EmergencyActivity">

    <com.XMBT.bluetooth.le.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="宝利奥"
        app:left_button_image="@drawable/common_ic_left_arrow"
        app:title_textColor="#fff"
        app:title_background="@color/title_bg"
        app:right_button_text="未连接"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xbanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:pointsPosition="CENTER"
                app:AutoPlayTime="3000"
                app:pointsContainerBackground="#44aaaaaa"
                app:pointNormal="@drawable/shape_noraml"
                app:pointSelect="@drawable/shape_selected">
            </com.stx.xhb.xbanner.XBanner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:background="@android:color/white">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/label_shape">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_voltage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电池电压:0V"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:id="@+id/tv_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电池温度:0 ℃"
                            android:textColor="#ffffff"/>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/label_strok_shape">

                    <com.XMBT.bluetooth.le.view.ChargingProgess
                        android:layout_centerInParent="true"
                        android:id="@+id/chargingprigressView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cgv_item_count="4"
                        app:cgv_item_height="15dp"
                        app:cgv_item_width="25dp"
                        android:layout_margin="10dp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电源良好，允许启动汽车"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/baterycontrol"
                android:layout_marginTop="16dp">

                <CheckBox
                    android:id="@+id/cb_floodlight"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@null"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="26dp"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/cb_warninglight"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@null"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/cb_usb"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@null"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/tv_floodlight"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="26dp"
                    android:button="@null"
                    android:text="照明灯(关闭)"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@drawable/on_off_textcolor_selector"/>

                <CheckBox
                    android:id="@+id/tv_warninglight"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:button="@null"
                    android:text="警示灯(关闭)"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@drawable/on_off_textcolor_selector"/>

                <CheckBox
                    android:id="@+id/tv_usb"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:button="@null"
                    android:text="USB输出(关闭)"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@drawable/on_off_textcolor_selector"/>

            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
