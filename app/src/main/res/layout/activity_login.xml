<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.XMBT.bluetooth.le.ui.misc.LoginActivity">

    <com.XMBT.bluetooth.le.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_button_image="@drawable/common_ic_left_arrow"
        app:title_background="@color/title_bg"
        app:title_text="GPS电池"
        app:title_textColor="@color/white" />

    <LinearLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/edit_shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入账号"
            android:paddingLeft="10dp"
            android:text="18988536586"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/passwordEt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入密码"
            android:text="yejinhui620057"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLayout"
        android:layout_margin="16dp"
        android:background="@null"
        android:onClick="doClick"
        android:paddingLeft="3dp"
        android:text="新用户注册"
        android:textColor="@color/title_color"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editLayout"
        android:layout_alignTop="@+id/button8"
        android:background="@null"
        android:onClick="doClick"
        android:text="忘记密码"
        android:textColor="@color/title_color"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button7"
        android:layout_alignStart="@+id/button8"
        android:layout_below="@+id/button8"
        android:background="@drawable/login_button_shape"
        android:onClick="doClick"
        android:text="登录"
        android:textColor="#ffffff" />

</RelativeLayout>
